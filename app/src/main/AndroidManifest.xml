<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rijan.rijanshrestha_jobfinder">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JobFinder"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AddJob"
            android:theme="@style/Theme.NoActionBar" ></activity>
        <activity android:name=".UserDetails"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".user.EditActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".user.UserProfile"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".AdminSplash"
            android:theme="@style/Theme.NoActionBar" />
        <activity android:name=".user.UserProfileActivity" />
        <activity
            android:name=".user.UserActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".AdminActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".UserActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>